<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appUpdate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/header" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/img_size_xlarge"
            android:layout_height="@dimen/img_size_xlarge"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            appUpdate:civ_border_color="#56ffffff"
            appUpdate:civ_border_width="4dp" />

        <TextView
            android:id="@+id/txt_username"
            style="@style/SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center_vertical|right"
            android:text="@string/username"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_default" />

        <TextView
            android:id="@+id/txt_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|right"
            android:text="@string/userid"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_default" />


        <LinearLayout
            android:id="@+id/ln_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_location_details" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical|right"
                android:padding="@dimen/padding_5"
                android:text="@string/address"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />
        </LinearLayout>


        <TextView
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15" />


        <LinearLayout
            android:id="@+id/ln_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_phone"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_phone" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical|right"
                android:padding="@dimen/padding_5"
                android:text="@string/phone_no"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />
        </LinearLayout>


        <TextView
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15" />


        <LinearLayout
            android:id="@+id/ln_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_email"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_mail" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical|right"
                android:padding="@dimen/padding_5"
                android:text="@string/email"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />
        </LinearLayout>


        <TextView
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_block"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_user" />

            <TextView
                android:id="@+id/txt_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="توقيف حساب المستخدم"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />

            <Switch
                android:id="@+id/sw_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15" />
        </LinearLayout>
        <EditText
            android:id="@+id/edt_res_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:inputType="text"

            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/dark_gray"
            android:visibility="visible"
           android:hint="سبب التوقف"

             />

    </LinearLayout>

        <TextView
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15" />


        <LinearLayout
            android:id="@+id/ln_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_message"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_chat" />

            <TextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="إرسال رسالة"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />
        </LinearLayout>


        <TextView
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15" />


        <LinearLayout
            android:id="@+id/ln_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_reward"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_rewards" />

            <TextView
                android:id="@+id/txt_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="منح مكافأة"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default"
                appUpdate:layout_constraintBottom_toBottomOf="@+id/img_profits"
                appUpdate:layout_constraintEnd_toEndOf="@id/txt_address"
                appUpdate:layout_constraintStart_toEndOf="@id/img_profits"
                appUpdate:layout_constraintTop_toTopOf="@+id/img_profits" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_sep1"
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ln_bookings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_bookings"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_calendar" />

            <TextView
                android:id="@+id/txt_bookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="عرض الحجوزات"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_sep2"
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ln_playgrounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_playgrounds"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_calendar" />

            <TextView
                android:id="@+id/txt_playgrounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="عرض الملاعب"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />

            <com.malaab.ya.action.actionyamalaab.admin.custom.CircularTextView
                android:id="@+id/txt_playgroundsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_5"
                android:gravity="center"
                android:padding="@dimen/padding_2"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_caption"
                android:visibility="gone"
                appUpdate:cSolidColor="@color/red"
                appUpdate:cStrokeColor="@color/white"
                appUpdate:cStrokeWidth="1" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_sep3"
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ln_profits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_profits"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_wallet" />

            <TextView
                android:id="@+id/txt_profits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="الإيرادات"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default"
                appUpdate:layout_constraintBottom_toBottomOf="@+id/img_profits"
                appUpdate:layout_constraintEnd_toEndOf="@id/txt_address"
                appUpdate:layout_constraintStart_toEndOf="@id/img_profits"
                appUpdate:layout_constraintTop_toTopOf="@+id/img_profits" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_sep4"
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ln_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_reports"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/icon_report" />

            <TextView
                android:id="@+id/txt_reports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_5"
                android:text="التقارير"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_default" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_sep5"
            style="@style/Separator_Horizontal_No_Margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:visibility="gone" />
        <LinearLayout
            android:id="@+id/ln_fines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_fines"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/padding_5"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimary"
                appUpdate:srcCompat="@drawable/ic_fines" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_fines"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_default" />
                <TextView
                    android:id="@+id/txt_fines_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:gravity="left"
                    android:layout_marginEnd="16dp"
                    android:text="@string/show"
                    android:padding="5dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/txt_default" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>