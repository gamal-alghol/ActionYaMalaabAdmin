<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    app:cardCornerRadius="@dimen/cv_radius_large"
    app:cardElevation="@dimen/cv_elevation"
    app:cardUseCompatPadding="false">

    <android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
        android:padding="8dp"
        android:background="@drawable/layout_rounded_border_green"

        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/txt_default"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintRight_toLeftOf="@+id/textView14"
        android:layout_marginLeft="16dp"
        android:textColor="@color/dark_gray"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.0"
        tools:text="gamalorge123@gmail.com" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:text="اسم المالك:"
        android:textSize="@dimen/txt_button"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:text="رقم الجوال:"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/phone_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/txt_default"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintRight_toLeftOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.0"
        />
        <TextView
            android:id="@+id/txt_sep"
            style="@style/Separator_Horizontal_No_Margin"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_owner" />


        <TextView
            android:id="@+id/name_guard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/txt_default"

            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            app:layout_constraintVertical_bias="0.0"
            tools:text="gamalorge123@gmail.com" />


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="اسم الحارس:"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_button"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_sep" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
android:layout_marginBottom="4dp"
            android:text="رقم الجوال:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/phone_guard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/txt_default"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintRight_toLeftOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/name_guard"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>